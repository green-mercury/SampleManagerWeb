{
  "name": "racine-desktop",
  "version": "0.2.0",
  "description": "A desktop demo of the Racine lab book",
  "main": "renderer.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package": "node package_python.js && npm run -s package-electron && npm run -s package-cleanup",
    "package-electron": "electron-builder --publish=never",
    "package-cleanup": "rm -rf build && rm -rf run_app.spec && rm -rf dist-python"
  },
  "build": {
    "appId": "com.racine.desktop",
    "productName": "RacineDesktop",
    "asar": false,
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "signIgnore": [
        "\\.eot",
        "\\.otf",
        "\\.png",
        "\\.woff"
      ]
    },
    "files": [
      "renderer.js",
      "icon.png",
      "spinner.html",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist-python/",
        "to": "app/dist-python",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "author": "Holger Graef",
  "license": "GPL-3.0-only",
  "dependencies": {
    "ps-tree": "^1.2.0"
  },
  "devDependencies": {
    "electron": "28.2.2",
    "electron-builder": "24.9.1"
  }
}
