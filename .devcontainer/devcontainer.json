{
  "name": "Racine",

  "dockerComposeFile": [
    "../docker/docker-compose-dev.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "dev-cont",
  "mounts": [ "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind" ],
  "workspaceFolder": "/app",

  "customizations": {
    "vscode": {
      "settings": {
        "editor.rulers": [ 100 ],
        "files.associations": {
          "**/app/templates/**/*.html": "jinja-html"
        }
      },
      "extensions": [
        "samuelcolvin.jinjahtml",
        "ms-python.black-formatter",
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "eamodio.gitlens"
      ]
    }
  },

  "postCreateCommand": "cd /app && make app-deps app-dev-deps install-js-dependencies && flask db upgrade"
}
